<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tobias.footballapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:text="Go To Players"
            android:onClick="toAllPlayers"/>

        <Button
            android:id="@+id/fab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:text="+"
            android:textSize="40dp"
            android:onClick="addPlayer"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:text="Go To Teams"
            android:onClick="toAllTeams"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:text="+"
            android:textSize="40dp"
            android:onClick="addTeam"/>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Competition"
        android:onClick="goToCompetition"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:onClick="clearPrefs"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compensate"
        android:onClick="compensateRating"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Reset"
        android:onClick="setDatabaseAfterClear"/>
</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="random"
        android:onClick="createRandomPlayer"/>


    <Button
        android:id="@+id/sharedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get current shared"
        android:onClick="getSharedButton"/>

    <Button
        android:id="@+id/tempList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to templist"
        android:onClick="tempList"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempText"/>





</LinearLayout>
